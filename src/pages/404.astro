---
import BaseLayout from '../layouts/BaseLayout.astro';
import SearchOverlay from '../components/SearchOverlay.astro';
import GuideCard from '../components/GuideCard.astro';
import { getCollection } from 'astro:content';

const guides = (await getCollection('guides'))
  .sort((a,b) => +new Date(b.data.pubDate) - +new Date(a.data.pubDate))
  .slice(0, 6);
---

<BaseLayout title="Page not found" description="This page does not exist. Try search or recent guides.">
  <Fragment slot="search"><SearchOverlay /></Fragment>

  <section class="mx-auto max-w-7xl px-4 mt-12">
    <h1 class="text-3xl font-extrabold mb-2">Page not found</h1>
    <p class="text-text2 mb-6">Use search or jump to a section.</p>

    <div class="flex flex-wrap gap-3 mb-8">
      <a href="/guides/" class="btn btn-outline">All Guides</a>
      <a href="/news/" class="btn btn-outline">News</a>
      <a href="/guides/beginners/" class="btn btn-outline">Beginner’s Guides</a>
      <button id="open-search" class="btn btn-primary">Open search</button>
    </div>

    <h2 class="text-xl font-bold mb-4">Latest guides</h2>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {guides.map(g => (
        <GuideCard href={`/guides/${g.slug}/`} title={g.data.title} description={g.data.description} tag={g.data.category} readingTime={g.data.readingTime} cover={g.data.cover}/>
      ))}
    </div>
  </section>

  <script>
    // öffnet dein Overlay
    document.getElementById('open-search')?.addEventListener('click', () =>
      document.dispatchEvent(new CustomEvent('lnf:open-search'))
    );
  </script>
</BaseLayout>
