---
const { items = [] } = Astro.props as {
  items: Array<{ name: string; href?: string }>;
};
---

<nav aria-label="Breadcrumb" class="text-sm text-text2 mb-4">
  <ol class="flex flex-wrap items-center gap-2">
    {items.map((it, i) => (
      <li>
        {it.href ? <a href={it.href} class="hover:underline">{it.name}</a> : <span aria-current="page">{it.name}</span>}
        {i < items.length - 1 && <span class="mx-2 text-border">/</span>}
      </li>
    ))}
  </ol>
</nav>
