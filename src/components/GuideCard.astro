---
interface Props {
  href: string;
  title: string;
  description?: string;
  tag?: string;
  readingTime?: number;
  cover?: string;
}
const { href, title, description, tag, readingTime, cover } = Astro.props as Props;
---
<a href={href} class="card overflow-hidden block hover:translate-y-[-2px] transition will-change-transform">
  {cover && <img src={cover} alt={title} loading="lazy" decoding="async" class="w-full aspect-[16/9] object-cover" />}
  <div class="p-4">
    <div class="flex items-center gap-2 mb-2">
      {tag && <span class="text-xs px-2 py-0.5 rounded-full bg-accent2/20 text-accent2">{tag}</span>}
      {readingTime && <span class="text-xs text-text2">{readingTime} min read</span>}
    </div>
    <h3 class="text-lg font-semibold mb-1 line-clamp-2">{title}</h3>
    {description && <p class="text-sm text-text2 line-clamp-2">{description}</p>}
  </div>
</a>
